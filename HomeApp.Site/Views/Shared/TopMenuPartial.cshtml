@using HomeApp.Core.Identity.CustomProvider
@using Microsoft.AspNetCore.Identity
@inject UserManager<CustomIdentityUser> UserManager
<div class="header__top">
    <div class="container">
        <ul class="top-nav">

            @if (Context.User.Identity.IsAuthenticated)
            {
               CustomIdentityUser user = UserManager.FindByNameAsync(Context.User.Identity.Name).Result;

                <li class="dropdown">
                    <a href="" data-toggle="dropdown">@(user?.UserName ?? Context.User.Identity.Name)</a>

                    <ul class="dropdown-menu">
                        <li><a href="">Профайл</a></li>
                        <li><a asp-area="Office" asp-controller="Home" asp-action="Index">Личный кабинет</a></li>
                        <li><a asp-action="Logout" asp-controller="Home" asp-area="Auth">Выход</a></li>
                    </ul>
                </li>
                <li class="top-nav__icon">
                    <a href="">
                        <i class="zmdi zmdi-notifications"></i>
                        <i class="top-nav__alert"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="dropdown top-nav__guest">
                    <a asp-area="Auth" asp-controller="Home" asp-action="Registration">Регистрация</a>
                </li>

                <li class="dropdown top-nav__guest">
                    <a asp-area="Auth" asp-controller="Home" asp-action="Login">Войти</a>
                </li>
            }

            <li class="pull-right top-nav__icon">
                <a href=""><i class="zmdi zmdi-facebook"></i></a>
            </li>
            <li class="pull-right top-nav__icon">
                <a href=""><i class="zmdi zmdi-twitter"></i></a>
            </li>
            <li class="pull-right top-nav__icon">
                <a href=""><i class="zmdi zmdi-google"></i></a>
            </li>

            <li class="pull-right hidden-xs"><span><i class="zmdi zmdi-email"></i>your@homeapp.pro</span></li>
            <li class="pull-right hidden-xs"><span><i class="zmdi zmdi-phone"></i>+7 (917) 599-17-02</span></li>
        </ul>
    </div>
</div>