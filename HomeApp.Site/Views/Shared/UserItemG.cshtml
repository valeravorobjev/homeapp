@using HomeApp.Core.Db.Entities.Models
@model HomeApp.Core.Db.Entities.User

<div class="listings-grid__item">
    <a asp-controller="Specialist" asp-action="Overview" asp-route-userId="@Model.Id">
        <div class="listings-grid__main">
            <img src="@Url.Content(Model.PhotoMinPath)" alt="">
        </div>
        <div class="listings-grid__body">
            @if (Model is Person)
            {
                
                <h5>@(((Person)Model).LastName?.Ru) @(((Person)Model).FirstName?.Ru) @(((Person)Model).MidName?.Ru)</h5>
            }
            else if (Model is Professional)
            {
                <h5>@(((Professional)Model).Name?.Ru)</h5>
            }
            <small>@Model.Membership.Email</small>
            <small>@Model.Phones.FirstOrDefault()</small>
        </div>
        <ul class="listings-grid__attrs">
            <li class="rmd-rate" data-rate-value="@Model.Seo.Rating" data-rate-readonly="true"></li>
        </ul>
    </a>
    <div class="actions listings-grid__favorite">
        <div class="actions__toggle">
            <input type="checkbox">
            <i class="zmdi zmdi-favorite-outline"></i>
            <i class="zmdi zmdi-favorite"></i>
        </div>
    </div>
</div>