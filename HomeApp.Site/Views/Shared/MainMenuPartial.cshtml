@using HomeApp.Core.Db.Entities.Models.Enums
<div class="header__main">
    <div class="container">
        <a asp-controller="Home" asp-action="Index" class="logo">
            <img src="~/vendors/roost/img/logo.png" alt="">
            <div class="logo__text">
                <span>HomeApp pro</span>
                <span>Профессиональная работа с недвижимостью</span>
            </div>
        </a>

        <div class="navigation-trigger visible-xs visible-sm" data-rmd-action="block-open" data-rmd-target=".navigation">
            <i class="zmdi zmdi-menu"></i>
        </div>

        <ul class="navigation">
            <li class="visible-xs visible-sm"><a class="navigation__close" data-rmd-action="navigation-close" href=""><i class="zmdi zmdi-long-arrow-right"></i></a></li>

            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() + ViewContext.RouteData.Values["Action"].ToString() == "HomeIndex"  ? "active" : "")">
                <a asp-controller="Home" asp-action="Index">Главная</a>
            </li>

            <li class="navigation__dropdown @(ViewContext.RouteData.Values["Controller"].ToString() == "RealEstate"  ? "active" : "")">
                <a asp-controller="RealEstate" asp-action="Grid" class="prevent-default">Недвижимость</a>

                <ul class="navigation__drop-menu">
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() + ViewContext.RouteData.Values["operationType"] == "RealEstateRent"  ? "active" : "")">
                        <a asp-controller="RealEstate" asp-action="Grid" asp-route-operationType="@OperationType.Rent">Аренда</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() + ViewContext.RouteData.Values["operationType"] == "RealEstateLongTermRental"  ? "active" : "")">
                        <a a asp-controller="RealEstate" asp-action="Grid" asp-route-operationType="@OperationType.LongTermRental">Длительная аренда</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() + ViewContext.RouteData.Values["operationType"] == "RealEstateDailyRent"  ? "active" : "")">
                        <a a asp-controller="RealEstate" asp-action="Grid" asp-route-operationType="@OperationType.DailyRent">Посуточная аренда</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() + ViewContext.RouteData.Values["operationType"] == "RealEstateSale"  ? "active" : "")">
                        <a a asp-controller="RealEstate" asp-action="Grid" asp-route-operationType="@OperationType.Sale">Продажа</a>
                    </li>
                </ul>
            </li>

            <li class="navigation__dropdown @(ViewContext.RouteData.Values["Controller"].ToString() == "Specialist"  ? "active" : "")" >
                <a asp-controller="Specialist" asp-action="Grid" class="prevent-default">Специалисты</a>

                <ul class="navigation__drop-menu">
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() + ViewContext.RouteData.Values["userType"] == "SpecialistAgency"  ? "active" : "")">
                        <a asp-controller="Specialist" asp-action="Grid" asp-route-userType="@UserType.Agency">Агенства</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() + ViewContext.RouteData.Values["userType"] == "SpecialistRealtor" ? "active" : "")">
                        <a asp-controller="Specialist" asp-action="Grid" asp-route-userType="@UserType.Realtor">Риэлторы</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() + ViewContext.RouteData.Values["userType"] == "SpecialistDeveloper" ? "active" : "")">
                        <a asp-controller="Specialist" asp-action="Grid" asp-route-userType="@UserType.Developer">Застройщики</a>
                    </li>
                </ul>
            </li>

            @*<li><a href="submit-property.html">Блог</a></li>*@
            <li><a asp-controller="Home" asp-action="Contact">Контакты</a></li>
        </ul>
    </div>
</div>