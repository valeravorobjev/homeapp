@using HomeApp.Core.Db.Entities.Models.Enums
@using HomeApp.Site.Areas.Office.ViewModels
@model UserType

@Html.Partial("Partials/Header")

<div class="submit-property">
    @Html.Partial("Partials/Steps", new StepViewModel { Step = Model == UserType.Person ? 5 : 6, UserType = Model })
    <div class="tab-content submit-property__content">
        <div class="tab-pane fade in active">
            <div class="card">
                <div class="submit-property__success">
                    <i class="zmdi zmdi-check"></i>

                    <h2>Готово!</h2>
                    <p>Ваш профайл создан. Теперь вы можете воспользоваться личным кабинетом.</p>
                    <a class="btn btn-sm btn-primary" asp-area="Office" asp-controller="Home" asp-action="Index">Перейти в ЛК</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Styles
    {
    <link rel="stylesheet" href="~/css/profile.css" />
}
