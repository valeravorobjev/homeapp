@using HomeApp.Core.Identity.CustomProvider
@using Microsoft.AspNetCore.Identity
@model HomeApp.Site.Areas.Office.ViewModels.SetUserTypeViewModel
@inject UserManager<CustomIdentityUser> UserManager

@{
    CustomIdentityUser user = UserManager.FindByNameAsync(Context.User.Identity.Name).Result;
    string userName = user.UserName ?? user.Email;
}

<header class="main__title text-center">
    <h2>Настройка профайла</h2>
    <small>Уважаемый <b>@userName</b>, чтобы воспользоваться личным кабинетом вам необходимо активировать ваш профайл.</small>
    <small>Следуйте инструкциям ниже, это займет совсем немного времени!</small>
</header>

<div class="submit-property">
    <ul class="submit-property__steps">
        <li class="active"><a>1</a></li>
        <li><a>2</a></li>
        <li><a>3</a></li>
        <li><a>4</a></li>
        <li><a>5</a></li>
        <li class="submit-property__caret"></li>
    </ul>
    <div class="tab-content submit-property__content">
        <div class="tab-pane fade in active">
            <div class="card">
                <div class="card__header">
                    <h2>Вы риэлтор?</h2>
                    <small>Отметьте галочку, если вы являетесь профессионалом в области недвижимости</small>
                </div>
                <form class="card__body" asp-area="Office" asp-controller="Profile" asp-action="SetUserType" method="post" id="is-realtor">
                    <div class="form-group">
                        <div class="checkbox">
                            <label class="text-muted">
                                <input type="checkbox" asp-for="IsRealtor">
                                <i class="input-helper"></i>
                                Да, я риэлтор
                            </label>
                        </div>
                        <input  type="hidden" name="UserId" value="@Model.UserId"/>
                    </div>
                    <a href="javascript:{}" onclick="document.getElementById('is-realtor').submit();" data-toggle="tab" class="btn btn--circle btn-primary submit-property__button">
                        <i class="zmdi zmdi-long-arrow-right"></i>
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Styles
{
    <link rel="stylesheet" href="~/css/profile.css" />
}

