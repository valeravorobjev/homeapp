@using HomeApp.Core.Db.Entities.Models.Enums
@using HomeApp.Site.Areas.Office.ViewModels
@model SetSocialViewModel

@Html.Partial("Partials/Header")

<div class="submit-property">
    @Html.Partial("Partials/Steps", new StepViewModel { Step = Model.UserType == UserType.Person ? 3 : 4, UserType = Model.UserType })
    <div class="tab-content submit-property__content">
        <div class="tab-pane fade in active">
            <div class="card">
                <div class="card__header">
                    <h2>Соцсети</h2>
                    <small>Укажите ваши странички в социальных сетях для SEO оптимизации. Пользователям будет проще найти вас!</small>
                </div>
                <form class="card__body" asp-area="Office" asp-controller="Profile" asp-action="SetSocial" method="post" id="social">
                    <input type="hidden" name="UserType" value="@Model.UserType"/>
                    <input type="hidden" name="UserId" value="@Model.UserId"/>
                    <div class="form-group form-group--float form-group--float-center">
                        <input type="text" class="form-control text-center" asp-for="Facebook">
                        <i class="form-group__bar"></i>
                        <label>Фейсбук</label>
                    </div>
                    <div class="form-group form-group--float form-group--float-center">
                        <input type="text" class="form-control text-center" asp-for="Twitter">
                        <i class="form-group__bar"></i>
                        <label>Твиттер</label>
                    </div>
                    <div class="form-group form-group--float form-group--float-center">
                        <input type="text" class="form-control text-center" asp-for="GooglePlus">
                        <i class="form-group__bar"></i>
                        <label>Гугл плюс</label>
                    </div>

                    <div class="form-group form-group--float form-group--float-center">
                        <input type="text" class="form-control text-center" asp-for="Vk">
                        <i class="form-group__bar"></i>
                        <label>Вконтакте</label>
                    </div>

                    <div class="form-group form-group--float form-group--float-center">
                        <input type="text" class="form-control text-center" asp-for="Ok">
                        <i class="form-group__bar"></i>
                        <label>Однокласники</label>
                    </div>

                    <div class="form-group form-group--float form-group--float-center">
                        <input type="text" class="form-control text-center" asp-for="Instagram">
                        <i class="form-group__bar"></i>
                        <label>Инстаграм</label>
                    </div>

                    <a href="javascript:{}" onclick="document.getElementById('social').submit();" data-toggle="tab" class="btn btn--circle btn-primary submit-property__button">
                        <i class="zmdi zmdi-long-arrow-right"></i>
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Styles
    {
    <link rel="stylesheet" href="~/css/profile.css" />
}